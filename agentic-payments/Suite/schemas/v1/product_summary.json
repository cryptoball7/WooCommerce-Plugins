{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "title", "price", "in_stock", "type"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Stable, agent-visible product identifier"
    },
    "title": {
      "type": "string"
    },
    "price": {
      "type": "object",
      "required": ["amount", "currency"],
      "properties": {
        "amount": { "type": "number" },
        "currency": { "type": "string" }
      }
    },
    "in_stock": {
      "type": "boolean"
    },
    "type": {
      "type": "string",
      "description": "simple | variable"
    }
  }
}